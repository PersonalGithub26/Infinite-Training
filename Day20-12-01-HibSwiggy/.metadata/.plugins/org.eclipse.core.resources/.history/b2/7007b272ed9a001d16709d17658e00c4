package com.cmsJsf;

import java.util.List;

import javax.faces.bean.ManagedBean;
import javax.faces.bean.SessionScoped;

import org.hibernate.Criteria;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.criterion.Projection;
import org.hibernate.criterion.Projections;
import org.hibernate.criterion.Restrictions;

@ManagedBean(name = "wDao")
@SessionScoped
public class WalletDaoImp implements WalletDAO {

	private String localCode;
	
	
	
	@Override
	public List<Wallet> showCustomerWalletDao(int custId) {
		SessionFactory sf = SessionHelper.getConnection();
		Session session = sf.openSession();
		Criteria cr = session.createCriteria(Wallet.class);
		cr.add(Restrictions.eq(("custId"), custId));
		List<Wallet> wallets = cr.list();
		return wallets;
	}
	
	
	public List<String> showWalletNames() {
		SessionFactory sf = SessionHelper.getConnection();
		Session session = sf.openSession();
		Criteria cr = session.createCriteria(Wallet.class);
		Projection projection = Projections.distinct(Projections.property("walletSource")); 
		//Projection projection2 = Projections.("walletSource", WalletSource.class);
		cr.setProjection(projection); 
		List<String> list = cr.list();
		return list;
		
	}
}
