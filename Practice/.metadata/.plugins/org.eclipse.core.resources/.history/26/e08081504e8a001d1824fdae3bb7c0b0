	function OnLoading() {

		document.body.style.cssText+=`background-image:url(${"C:\Users\chandud\OneDrive - Infinite Computer Solutions (India) Limited\Desktop\desktop.jpg"})`;
		
		document.getElementById("resname").innerHTML = "<h2>"
				+ restTemp[hotelno] + "<h2/>";

		document.getElementById("item1").innerHTML = rest[hotelno][0][0];
		document.getElementById("item2").innerHTML = rest[hotelno][1][0];
		document.getElementById("item3").innerHTML = rest[hotelno][2][0];
		document.getElementById("item4").innerHTML = rest[hotelno][3][0];
		document.getElementById("item5").innerHTML = rest[hotelno][4][0];

		document.getElementById("price1").innerHTML = rest[hotelno][0][1];
		document.getElementById("price2").innerHTML = rest[hotelno][1][1];
		document.getElementById("price3").innerHTML = rest[hotelno][2][1];
		document.getElementById("price4").innerHTML = rest[hotelno][3][1];
		document.getElementById("price5").innerHTML = rest[hotelno][4][1];

		document.getElementById("click1").value = rest[hotelno][0][1];
		document.getElementById("click2").value = rest[hotelno][1][1];
		document.getElementById("click3").value = rest[hotelno][2][1];
		document.getElementById("click4").value = rest[hotelno][3][1];
		document.getElementById("click5").value = rest[hotelno][4][1];

		document.getElementById("click1").checked = false;
		document.getElementById("click2").checked = false;
		document.getElementById("click3").checked = false;
		document.getElementById("click4").checked = false;
		document.getElementById("click5").checked = false;

		document.getElementById("ab").innerHTML = "TOTAL=" + "000";

	}

	function totalIt() {
		var input = document.getElementsByName("price");
		var total = 0;

		for (var i = 0; i < input.length; i++) {
			if (input[i].checked) {
				total += parseInt(input[i].value);

			}
		}

		document.getElementById("ab").innerHTML = "TOTAL=" + total;
	}

	function next() {

		if(hotelno < restno -1){
		hotelno++;
		document.getElementById("ab").innerHTML = "TOTAL=" + "000";
		document.getElementsByName("price").checked = false;
		OnLoading();
		}
		else{
			alert("This is the last page....");
		}
	}
		
		function prev()
		{
			
			
			if(hotelno <= 0)
				{
					alert("This is the first page....")
				}
			else
				{
				hotelno--;
				document.getElementById("ab").innerHTML = "TOTAL=" + "000";
				document.getElementsByName("price").checked = false;
				OnLoading();
				}
			
			
		}
	
</script>
     
